<% if error_object.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'>
      <h5> Please fix these errors</h5>
        <ul>
          <% error_object.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>