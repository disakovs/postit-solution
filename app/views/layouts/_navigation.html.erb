<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, class: 'btn btn-success btn-small' %>
  </li>
  <li style="width:15px"></li>
  <li>
    <div class='btn-group nav_item'>
      <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
        Categories <span class='caret'></span>
        
      <% end %>
      <ul class='dropdown-menu'>
        <% Category.all.each do |category| %>
          <li><%= link_to category.name, category_path(category) %></li>
        <% end %>
        <% if logged_in? %>
          <li class='divider'></li>
          <li>
            <%= link_to(new_category_path) do %>
              <i class='icon-plus'></i>
              New Category
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </li>
  <li style="width:15px"></li>
  <li>
  <% if logged_in? %>
  
    <li>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
     </li>
    <li style="width:15px"></li>
    <div class='btn-group nav_item'>
      <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
        <%= current_user.username %><span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class='icon-pencil'></i>
            edit profile
          <% end %>
        </li>
        <li>
          <%= link_to "Show Profile", user_path(current_user), class: 'btn btn-success btn-small' %>
        </li>
        <li>
          <%= link_to "Log Out", logout_path, class: 'btn btn-success btn-small' %>
        </li>
      </ul>
    </div>
    
  <% else %> 
  
    <li>
      <%= link_to "Register", register_path, class: 'btn btn-success btn-small' %>
    </li>
    <li>
      <%= link_to "Log in", login_path, class: 'btn btn-success btn-small' %>
    </li>
    
  <% end %>
  
</ul>
